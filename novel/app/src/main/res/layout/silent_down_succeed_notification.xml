<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/default_notif_bg"
    android:orientation="vertical"
    android:paddingRight="9dp">

    <com.duoyue.app.ui.widget.CustomImageView
        android:id="@+id/icon"
        android:layout_width="50dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="5dp"
        android:src="@mipmap/ic_launcher"
        tools:ignore="ContentDescription"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon"
        android:layout_centerVertical="true"
        android:paddingLeft="7dp"
        android:textColor="@color/standard_text_color_black"
        android:textSize="@dimen/standard_tx_4"
        android:text="@string/silet_down_succeed"
        />

</RelativeLayout>