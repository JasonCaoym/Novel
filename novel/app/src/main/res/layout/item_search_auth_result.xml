<?xml version="1.0" encoding="utf-8"?>

<com.duoyue.lib.base.widget.XLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                          xmlns:app="http://schemas.android.com/apk/res-auto"
                                          android:layout_width="match_parent"
                                          android:orientation="vertical"
                                          android:id="@+id/xll_auth"
                                          android:layout_height="wrap_content">

    <com.duoyue.lib.base.widget.XRelativeLayout
            app:x_layout_margin="32,15,32,#"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/iv_icon_header"
                   android:src="@mipmap/icon_search_header"
                   app:x_layout_size="90,90"/>


        <TextView android:layout_width="wrap_content"
                  app:x_text_size="34"
                  android:id="@+id/tv_author"
                  android:includeFontPadding="false"
                  app:x_layout_margin="27,#,031,#"
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@+id/iv_icon_header"
                  android:layout_height="wrap_content"/>


        <TextView android:layout_width="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@+id/tv_author"
                  android:background="@drawable/bg_search_auth"
                  android:textColor="@color/common_h3"
                  app:x_text_size="22"
                  android:includeFontPadding="false"
                  android:text="作者"
                  app:x_layout_padding="14,10,14,10"
                  android:layout_height="wrap_content"/>

        <ImageView android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:x_layout_margin="23,#,#,#"
                   android:id="@+id/iv_go"
                   android:src="@mipmap/icon_my_list_back_right_w"/>

        <TextView
                android:id="@+id/tv_count"
                android:textColor="@color/color_898989_"
                app:x_text_size="24"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </com.duoyue.lib.base.widget.XRelativeLayout>

    <View android:layout_width="match_parent" android:layout_height="wrap_content"
          app:x_layout_margin="#,26,#,36"
          android:background="@color/color_f5f5f5"
          app:x_layout_size="#,12"
    />
</com.duoyue.lib.base.widget.XLinearLayout>
