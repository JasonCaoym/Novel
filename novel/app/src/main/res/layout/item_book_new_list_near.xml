<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <com.duoyue.lib.base.widget.XRelativeLayout
            android:id="@+id/xll_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:x_layout_margin="32,36,32,30">

        <com.duoyue.app.ui.widget.RoundImageView
                android:id="@+id/iv_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:x_layout_size="60,60" />


        <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_icon2"
                android:layout_toRightOf="@+id/iv_icon2"
                android:includeFontPadding="false"
                android:textColor="@color/book_shelf_top_text"
                app:x_layout_margin="18,#,18,#"
                android:lines="1"
                android:maxEms="10"
                android:ellipsize="end"
                app:x_text_size="30" />


        <TextView
                android:id="@+id/tv_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_alignLeft="@+id/tv_name"
                android:layout_alignBottom="@+id/iv_icon2"
                android:layout_toRightOf="@+id/iv_icon2"
                android:includeFontPadding="false"
                android:textColor="@color/common_h3"
                app:x_text_size="24" />

        <ImageView
                android:id="@+id/iv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_name"
                android:layout_alignBottom="@+id/tv_name"
                android:layout_toRightOf="@+id/tv_name"
                android:background="@color/read_ad_bg_day"
                app:x_layout_margin="11,#,#,#"
                app:x_layout_size="30,#" />


        <com.duoyue.lib.base.widget.XLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_icon2"
                android:layout_alignBottom="@+id/iv_icon2"
                android:layout_alignParentRight="true"
                android:id="@+id/xll"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/bg_near"
                    app:x_layout_margin="#,#,12,#"
                    app:x_layout_size="20,20" />

            <TextView
                    android:id="@+id/tv_mi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:textColor="@color/read_page_tip_05"
                    app:x_text_size="28" />

        </com.duoyue.lib.base.widget.XLinearLayout>

    </com.duoyue.lib.base.widget.XRelativeLayout>

    <com.duoyue.lib.base.widget.XRelativeLayout
            android:id="@+id/xll_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:x_layout_margin="32,#,32,#">


        <android.support.v7.widget.CardView
                android:id="@+id/cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="3dp"
                app:cardElevation="2dp"
                app:cardMaxElevation="1dp"
                app:cardUseCompatPadding="true"
                app:x_layout_size="178,243">

            <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>


        <TextView
                android:id="@+id/tv_book_name"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/cv"
                android:layout_toRightOf="@+id/cv"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:x_layout_margin="31,2,#,#"
                app:x_text_size="34" />

        <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_book_name"
                android:layout_alignLeft="@+id/tv_book_name"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:textColor="@color/color_898989_"
                app:x_layout_margin="#,20,#,20"
                app:x_text_size="26" />


        <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_desc"
                android:layout_alignLeft="@+id/tv_book_name"
                android:includeFontPadding="false"
                android:textColor="@color/common_h3"
                app:x_layout_margin="#,#,#,20"
                app:x_text_size="24" />

        <com.duoyue.lib.base.widget.XLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_book_name"
                android:layout_alignBottom="@+id/cv"
                android:orientation="horizontal"
                android:weightSum="2"
                app:x_layout_size="#,58">

            <TextView
                    android:id="@+id/tv_all_read"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_sign_in_14"
                    android:drawableLeft="@mipmap/bg_book_list_go_read"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="一起读"
                    android:textColor="@color/white"
                    app:x_layout_padding="50,#,50,#"
                    app:x_text_size="26" />

            <TextView
                    android:id="@+id/tv_join"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_sign_in_15"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="加入书架"
                    app:x_layout_margin="30,#,#,#"
                    app:x_layout_padding="39,#,39,#"
                    app:x_text_size="26" />

        </com.duoyue.lib.base.widget.XLinearLayout>


    </com.duoyue.lib.base.widget.XRelativeLayout>

    <View
            android:id="@+id/fix_row_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xll"
            android:background="@color/standard_div_line_color"
            app:x_layout_margin="#,40,#,#"
            app:x_layout_size="#,12" />
</com.duoyue.lib.base.widget.XLinearLayout>