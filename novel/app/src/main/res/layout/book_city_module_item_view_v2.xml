<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"

                                            android:layout_height="wrap_content"

                                            android:background="@color/white">

    <TextView
            android:includeFontPadding="false"
            android:id="@+id/module_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:x_layout_size="#,110"
            app:x_layout_padding="30,0,0,0"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/color_1b1b1b"
            app:x_text_size="40"
            tools:text="书城"/>

    <TextView
            app:x_layout_padding="0,0,30,0"
            android:textColor="@color/color_898989_"
            app:x_text_size="24"
            android:id="@+id/tv_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="换一换"
            android:drawablePadding="6dp"
            android:drawableRight="@mipmap/icon_switch"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

</com.duoyue.lib.base.widget.XRelativeLayout>