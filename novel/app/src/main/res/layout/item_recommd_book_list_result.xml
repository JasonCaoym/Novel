<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                          xmlns:app="http://schemas.android.com/apk/res-auto"
                                          android:layout_width="match_parent"
                                          android:orientation="vertical"
                                          android:id="@+id/xll_auth"
                                          android:layout_height="wrap_content">

    <View android:layout_width="match_parent" android:layout_height="wrap_content"
          app:x_layout_margin="#,#,#,40"
          android:background="@color/color_f5f5f5"
          app:x_layout_size="#,12"
    />

    <com.duoyue.lib.base.widget.XLinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            app:x_layout_margin="32,#,32,40"
            android:layout_height="wrap_content">

        <TextView
                android:text="搜索《"
                android:textStyle="bold"
                android:textColor="@color/book_shelf_top_text"
                app:x_text_size="36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_author"
                android:textStyle="bold"
                android:ellipsize="end"
                app:x_layout_max="280,#"
                android:maxLines="1"
                android:textColor="@color/book_shelf_top_text"
                app:x_text_size="36"/>

        <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_sum"
                android:textStyle="bold"
                android:textColor="@color/book_shelf_top_text"
                app:x_text_size="36"
                android:layout_height="wrap_content"/>
    </com.duoyue.lib.base.widget.XLinearLayout>



    <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                            android:scrollbars="none"
                                            app:x_layout_padding="16,#,16,#"
                                            android:id="@+id/rv_rm_book"
                                            android:layout_height="wrap_content"/>

    <View android:layout_width="match_parent" android:layout_height="wrap_content"
          app:x_layout_margin="#,26,#,36"
          android:background="@color/color_f5f5f5"
          app:x_layout_size="#,12"
    />
</com.duoyue.lib.base.widget.XLinearLayout>
