<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                          android:layout_width="match_parent"
                                          xmlns:app="http://schemas.android.com/apk/res-auto"
                                          android:orientation="vertical"
                                          android:id="@+id/xrl_other"
                                          android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            app:x_layout_margin="22,0,22,0"
            android:layout_width="wrap_content"
            android:id="@+id/cv"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="3dp"
            app:cardMaxElevation="1dp"
            app:cardElevation="2dp"
            android:background="@null"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content"
            app:x_layout_size="198,269">

        <ImageView android:layout_width="match_parent"
                   android:id="@+id/iv_header"
                   android:layout_height="match_parent"/>


    </android.support.v7.widget.CardView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:x_layout_margin="0,22,0,30"
            android:maxLines="2"
            android:ellipsize="none"
            android:gravity="left"
            android:includeFontPadding="false"
            android:layout_alignLeft="@+id/cv"
            android:layout_alignRight="@+id/cv"
            android:textColor="@color/black"
            android:layout_below="@+id/cv"
            app:x_text_size="28"
            android:id="@+id/tv_book_name"/>
</com.duoyue.lib.base.widget.XRelativeLayout>