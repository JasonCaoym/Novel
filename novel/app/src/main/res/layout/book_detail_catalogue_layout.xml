<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/book_detail_catalogue_layout">

    <TextView
            android:includeFontPadding="false"
            android:id="@+id/catalogue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/catalogue"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            app:x_layout_margin="32,#,15,#"
            android:textColor="@color/color_1b1b1b"
            app:x_text_size="40"/>

    <TextView
            android:id="@+id/latest_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/catalogue"
            android:gravity="center_vertical"
            app:x_layout_size="#,99"
            app:x_text_size="24"
            android:textColor="@color/color_898989"/>

    <TextView
            android:id="@+id/update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            app:x_layout_size="#,99"
            app:x_layout_padding="32,#,32,#"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/icon_class_back_right_w"
            android:textColor="@color/color_898989"
            app:x_text_size="24"/>


</com.duoyue.lib.base.widget.XRelativeLayout>