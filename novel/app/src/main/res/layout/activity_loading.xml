<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.duoyue.app.ui.widget.CustomImageView
        android:id="@+id/loading_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/down_loading"
        tools:ignore="ContentDescription"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_below="@id/loading_img"
        android:layout_centerHorizontal="true"
        style="@style/ProgressBar.Horizontal"
        android:layout_width="211dp"
        android:layout_height="10dp" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_bar"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/standard_text_size_medium"
        android:textColor="@color/white"
        android:layout_marginTop="12dp"
        android:text="@string/down_load"
        />

</RelativeLayout>