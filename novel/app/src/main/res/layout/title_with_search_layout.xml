<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            android:id="@+id/search_title_layout"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@color/white"
                                            android:gravity="top"
                                            android:orientation="horizontal">
    
    <com.duoyue.app.ui.widget.CustomImageView
            android:id="@+id/toolbar_back"
            style="@style/title_img_btn_style"
            android:visibility="gone"
            android:src="@mipmap/icon_back"/>
    
    <TextView
            android:id="@+id/search_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/title_text"
            app:x_layout_size="#,66"
            app:x_layout_margin="32,15,32,0"
            android:textColor="@color/text_color_505050"
            app:x_text_size="28"
            android:drawableLeft="@mipmap/icon_bookcase_top_search_b"
            android:drawablePadding="7dp"
            android:gravity="center_vertical"
            android:background="@drawable/search_text_bg"
            android:text="@string/search_book_ctiy"/>

</com.duoyue.lib.base.widget.XRelativeLayout>