<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

    <com.duoyue.lib.base.widget.XRelativeLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">


        <com.duoyue.lib.base.widget.XRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:x_layout_size="#,96">


            <ImageView
                    style="@style/title_img_btn_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:x_layout_padding="34,#,34,#"
                    android:id="@+id/toolbar_back"
                    android:src="@mipmap/icon_back"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/title_img_btn_style"
                    app:x_layout_padding="20,#,20,#"
                    android:id="@+id/iv_close_web"
                    android:layout_toRightOf="@id/toolbar_back"
                    android:src="@mipmap/close_web_icon"/>


            <TextView
                    android:id="@+id/toolbar_title"
                    style="@style/title_text_style"
                    android:layout_width="wrap_content"
                    app:x_layout_margin="240,#,50,#"
                    android:layout_centerInParent="true"
                    android:gravity="center"/>
        </com.duoyue.lib.base.widget.XRelativeLayout>
    </com.duoyue.lib.base.widget.XRelativeLayout>

    <FrameLayout
            android:id="@+id/web_view_contain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar_layout"/>

 <!--   <com.duoyue.app.ui.widget.ProgressWebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:layout_below="@+id/toolbar_layout"/>-->
    <FrameLayout
            android:id="@+id/task_ad_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
        />
    <include
            android:id="@+id/load_prompt_layout"
            layout="@layout/load_prompt_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</com.duoyue.lib.base.widget.XRelativeLayout>