<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_page_bg"
        android:orientation="vertical">
    <!-- 搜索栏 -->
    <include layout="@layout/title_with_search_layout"/>
    <!-- 分类区域 -->
    <com.duoyue.lib.base.widget.XRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:x_layout_margin="#,15,#,#"
            android:orientation="horizontal">
        <!-- 左侧分类组 -->
        <android.support.v7.widget.RecyclerView
                android:id="@+id/left_group_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:x_layout_size="118,#"
                android:overScrollMode="never"
                android:background="@color/color_F7F7F7"/>
        <!-- 右侧分类列表 -->
        <android.support.v7.widget.RecyclerView
                android:id="@+id/right_category_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:x_layout_margin="25,#,25,#"
                android:layout_toRightOf="@+id/left_group_view"
                android:background="@color/white"
                android:overScrollMode="never"/>
        <include
                android:id="@+id/load_prompt_layout"
                layout="@layout/load_prompt_layout"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="match_parent"/>
    
    </com.duoyue.lib.base.widget.XRelativeLayout>


</com.duoyue.lib.base.widget.XLinearLayout>