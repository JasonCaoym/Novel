<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                          xmlns:app="http://schemas.android.com/apk/res-auto"
                                          android:layout_width="match_parent"
                                          android:layout_height="match_parent"
                                          android:background="@drawable/corner_rec_white"
                                          android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/title_btn_text"
            app:x_layout_size="#,124"
            app:x_text_size="34"
            android:text="章节选择"/>

    <include layout="@layout/divider_1px"/>

    <com.duoyue.app.ui.view.MaxHeightRecyclerView
            android:id="@+id/recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:maxHeight="364dp"/>


</com.duoyue.lib.base.widget.XLinearLayout>