<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                          xmlns:tools="http://schemas.android.com/tools"
                                          xmlns:app="http://schemas.android.com/apk/res-auto"
                                          android:layout_width="match_parent"
                                          android:layout_height="wrap_content"
                                          android:orientation="vertical">

    <com.duoyue.app.ui.widget.CustomImageView
            android:scaleType="centerCrop"
            android:id="@+id/tab_icon"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:x_layout_margin="#,15,#,9"
            android:src="@mipmap/icon_bottom_tab_bookcase_a"
    />

    <TextView
            android:includeFontPadding="false"
            android:id="@+id/tab_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tab_icon"
            android:layout_centerHorizontal="true"
            app:x_text_size="24"
            tools:text="@string/tab_book_city"
            android:textColor="@color/home_tab_text_color"/>

    <com.duoyue.app.ui.widget.CustomImageView
            android:id="@+id/iv_red_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:x_layout_size="16,16"
            app:x_layout_margin="#,15,#,#"
            android:layout_toRightOf="@id/tab_icon"
            android:visibility="gone"
            android:src="@drawable/bg_red_point"/>
</com.duoyue.lib.base.widget.XRelativeLayout>