<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@color/white"
>

    <com.duoyue.lib.base.widget.XLinearLayout android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              android:orientation="horizontal"
                                              app:x_layout_padding="#,0,#,0"
                                              android:gravity="center_vertical"
                                              app:x_layout_size="#,110"
    >
        <TextView
                android:includeFontPadding="false"
                android:id="@+id/module_title"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1.0"
                app:x_layout_margin="30,0,30,0"
                android:textStyle="bold"
                android:textColor="@color/color_1b1b1b"
                app:x_text_size="40"
                tools:text="书城"/>

        <com.duoyue.lib.base.widget.XRelativeLayout
                android:id="@+id/show_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:x_layout_size="190,#"
        >
            <com.duoyue.app.ui.widget.CustomImageView
                    android:id="@+id/module_right_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:x_layout_size="14,24"
                    android:layout_centerVertical="true"
                    app:x_layout_margin="0,0,30,0"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_class_back_right_w"
            />
            <TextView
                    android:id="@+id/module_more"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    app:x_layout_margin="30,0,12,0"
                    android:layout_toLeftOf="@+id/module_right_icon"
                    android:text="@string/to_more"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_898989"
                    app:x_text_size="24"
                    android:gravity="center_vertical"
            />
        </com.duoyue.lib.base.widget.XRelativeLayout>
    </com.duoyue.lib.base.widget.XLinearLayout>
</com.duoyue.lib.base.widget.XRelativeLayout>