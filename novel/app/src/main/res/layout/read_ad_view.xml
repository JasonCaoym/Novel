<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/read_ad_root_layout"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingBottom="12dp"
        android:layout_gravity="center_vertical"
>
    <TextView
            android:id="@+id/read_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_color_666666"
            android:text="@string/ad_load_error"
            android:lineSpacingMultiplier="1.2"
            android:visibility="gone"
            android:textSize="16sp"
    />

    <com.duoyue.lib.base.widget.AdFrameLayout
            android:id="@+id/read_container"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:x_layout_padding="0,0,0,0"
            app:x_layout_margin="15,#,15,#"
            android:background="@drawable/dialog_ad_bg"/>

    <com.duoyue.lib.base.widget.AdShadeViewGroup
            android:id="@+id/ad_native_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">
        <TextView
                android:id="@+id/ad_native_play"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:x_layout_margin="140,45,140,0"
                android:drawableLeft="@mipmap/ad_play"
                app:x_text_drawable_bounds="35,0,65,30"
                app:x_layout_size="#,90"
                app:x_text_size="33"
                android:textColor="@color/white"
                android:text="@string/ad_free_time"
                android:background="@drawable/dialog_btn_bg_positive"
                android:gravity="center"
        />

        <TextView
                android:id="@+id/ad_native_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray_999"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/ad_native_play"
                android:gravity="center_horizontal"
                android:visibility="gone"
                app:x_layout_padding="75,25,75,25"
                app:x_layout_size="#,75"
                android:text="规则说明"
                app:x_text_size="22"
        />
    </com.duoyue.lib.base.widget.AdShadeViewGroup>

</com.duoyue.lib.base.widget.XLinearLayout>