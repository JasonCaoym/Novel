<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                          xmlns:app="http://schemas.android.com/apk/res-auto"
                                          android:layout_width="match_parent"
                                          android:layout_height="match_parent"
                                          android:background="@color/white"
                                          android:orientation="vertical">

    <include layout="@layout/toolbar_layout"/>

    <TextView
            android:id="@+id/book_end_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/not_end"
            android:textColor="@color/color_1b1b1b"
            android:textStyle="bold"
            app:x_layout_padding="32,25,32,40"
            android:ellipsize="end"
            app:x_text_size="50"
            android:maxLines="1"
    />

    <TextView
            android:id="@+id/book_end_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/please_wait_update"
            android:textColor="@color/standard_red_main_color_c1"
            app:x_layout_padding="32,0,32,55"
            app:x_text_size="30"
            android:ellipsize="end"
            android:maxLines="1"
    />

    <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:x_layout_size="#,12"
            android:background="@color/color_f5f5f5"
            />
    <include layout="@layout/book_recommend_similar_layout"/>

</com.duoyue.lib.base.widget.XLinearLayout>