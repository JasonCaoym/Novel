<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:id="@+id/xll_rank"
                                            android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/xrl"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="3dp"
            app:x_layout_size="100,134"
            app:x_layout_margin="#,#,#,36"
            app:cardMaxElevation="1dp"
            app:cardElevation="1dp"
            android:background="@null"
            android:layout_height="match_parent"
    >
        <ImageView android:layout_width="match_parent"
                   android:id="@+id/iv_icon"
                   android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/tv_sum"
                android:includeFontPadding="false"
                app:x_text_size="22"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_width="17dp"
                android:layout_height="17dp"/>
    </android.support.v7.widget.CardView>


    <TextView android:layout_width="wrap_content"
              android:maxLines="2"
              android:includeFontPadding="false"
              app:x_text_size="28"
              android:id="@+id/tv_book_name"
              android:ellipsize="end"
              android:layout_alignTop="@+id/xrl"
              android:layout_alignBottom="@+id/iv_icon"
              app:x_layout_margin="24,14,40,3"
              android:textColor="@color/black"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/xrl"/>


    <com.duoyue.lib.base.widget.XLinearLayout android:layout_width="wrap_content"
                                              android:layout_height="wrap_content"
                                              android:orientation="horizontal"
                                              app:x_layout_margin="0,0,0,13"
                                              android:layout_alignLeft="@+id/tv_book_name"
                                              android:layout_alignBottom="@+id/xrl">
        <TextView android:layout_width="wrap_content"
                  android:includeFontPadding="false"
                  app:x_text_size="24"
                  android:textColor="@color/standard_red_main_color_c1"
                  android:id="@+id/tv_word_count"
                  android:layout_height="wrap_content"
        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:includeFontPadding="false"
                  android:textColor="@color/color_b2b2b2"
                  app:x_text_size="24"
                  android:id="@+id/tv_rank"/>


    </com.duoyue.lib.base.widget.XLinearLayout>

</com.duoyue.lib.base.widget.XRelativeLayout>