<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                          xmlns:app="http://schemas.android.com/apk/res-auto"
                                          android:layout_width="match_parent"
                                          android:layout_height="wrap_content"
                                          android:orientation="vertical">

    <com.duoyue.app.ui.widget.CustomImageView
            android:id="@+id/book_hot_cover"
            android:background="@drawable/book_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:x_layout_size="112,152"
            app:x_layout_margin="32,4,20,15"
    />

    <TextView
            android:id="@+id/book_hot_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/not_end"
            android:textColor="@color/color_1b1b1b"
            android:textStyle="bold"
            app:x_layout_margin="0,3,22,5"
            android:ellipsize="end"
            app:x_text_size="28"
            android:maxLines="1"
            android:layout_toRightOf="@id/book_hot_cover"
    />

    <TextView
            android:id="@+id/book_hot_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/not_end"
            android:textColor="@color/color_898989"
            app:x_layout_margin="0,0,22,8"
            android:ellipsize="end"
            app:x_text_size="24"
            android:maxLines="1"
            android:layout_below="@id/book_hot_title"
            android:layout_toRightOf="@id/book_hot_cover"
    />

    <TextView
            android:id="@+id/book_hot_fans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/not_end"
            android:textColor="@color/color_898989"
            app:x_layout_margin="0,0,22,3"
            android:ellipsize="end"
            app:x_text_size="22"
            android:maxLines="1"
            android:layout_below="@id/book_hot_author"
            android:layout_toRightOf="@id/book_hot_cover"
    />

    <TextView
            android:id="@+id/book_hot_state"
            style="@style/base_text"
            android:background="@drawable/book_item_category_text_bg"
            android:gravity="center"
            app:x_layout_size="#,34"
            app:x_text_size="20"
            android:textColor="@color/color_898989"
            android:text="@string/finished"
            android:layout_below="@id/book_hot_fans"
            android:layout_toRightOf="@id/book_hot_cover"
    />

    <TextView
            android:id="@+id/book_hot_resume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/not_end"
            android:textColor="@color/color_898989"
            app:x_layout_margin="32,0,22,32"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            app:x_text_size="24"
            android:maxLines="2"
            android:layout_below="@id/book_hot_cover"
    />

</com.duoyue.lib.base.widget.XRelativeLayout>