<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                          xmlns:tools="http://schemas.android.com/tools"
                                          xmlns:app="http://schemas.android.com/apk/res-auto"
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:background="@color/white"
                                          android:orientation="vertical">


    <com.duoyue.app.ui.widget.CustomImageView
            android:id="@+id/book_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/book_bg"
            app:x_layout_margin="13,10,13,20"
            app:x_layout_size="152,206"
            android:scaleType="centerCrop"/>

    <TextView
            android:id="@+id/book_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:x_layout_margin="13,0,0,25"
            android:gravity="left"
            app:x_layout_max="152,#"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_1b1b1b"
            app:x_text_size="28"
            tools:text="书城"/>

    <TextView
            android:id="@+id/book_author"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:x_layout_margin="13,0,0,45"
            android:gravity="left"
            app:x_layout_max="152,#"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_898989"
            app:x_text_size="24"
            tools:text="十里"/>

</com.duoyue.lib.base.widget.XLinearLayout>