<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:paddingTop="24dp"
                                            android:id="@+id/ll"
                                            android:background="@color/white">

    <com.duoyue.app.ui.view.RandomPushBookScrollView
            android:id="@+id/scl_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

        <com.duoyue.lib.base.widget.XLinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <com.duoyue.lib.base.widget.XLinearLayout
                    android:id="@+id/ll_title_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <com.duoyue.lib.base.widget.XRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:x_layout_padding="#,36,32,30">

                    <ImageView
                            android:id="@+id/iv_back_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:x_layout_padding="32,32,32,32"
                            android:scaleType="centerInside"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/icon_back"/>

                    <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/black"
                            app:x_text_size="40"
                            android:textStyle="bold"
                            android:text="找不到想看的?"/>

                    <TextView
                            android:id="@+id/tv_author"
                            android:layout_below="@id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_666666"
                            app:x_layout_margin="#,16,#,#"
                            android:layout_centerHorizontal="true"
                            app:x_text_size="28"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="十年老书虫带你读"/>

                </com.duoyue.lib.base.widget.XRelativeLayout>

                <com.duoyue.lib.base.widget.XRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_f5f5f5"
                        app:x_layout_padding="32,25,32,25">

                    <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:id="@+id/cv_book_pic"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="2dp"
                            app:cardMaxElevation="1dp"
                            app:cardElevation="2dp"
                            android:background="@null"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_height="wrap_content"
                            app:x_layout_size="126,170">

                        <ImageView
                                android:id="@+id/book_cover"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                    </android.support.v7.widget.CardView>

                    <TextView
                            android:id="@+id/tv_book_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_1b1b1b"
                            app:x_text_size="30"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textStyle="bold"
                            android:layout_toRightOf="@id/cv_book_pic"
                            app:x_layout_margin="32,#,120,#"
                            android:text="斗罗大陆"/>

                    <TextView
                            android:id="@+id/tv_book_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已完结·106万字·玄幻"
                            app:x_layout_margin="32,18,#,#"
                            android:layout_toRightOf="@id/cv_book_pic"
                            android:layout_below="@id/tv_book_name"/>

                    <TextView
                            android:id="@+id/tv_add_book_shelf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/standard_red_main_color_c1"
                            android:layout_below="@id/tv_book_type"
                            android:layout_toRightOf="@id/cv_book_pic"
                            android:background="@drawable/bg_fe8b13_13"
                            android:gravity="center"
                            app:x_layout_size="156,50"
                            app:x_layout_margin="32,18,#,#"
                            android:text="加入书架"/>

                    <TextView
                            android:id="@+id/tv_change"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_below="@id/tv_book_type"
                            android:layout_toRightOf="@id/tv_add_book_shelf"
                            android:background="@drawable/btn_sign_in_14"
                            android:gravity="center"
                            app:x_layout_size="156,50"
                            app:x_layout_margin="22,18,#,#"
                            android:text="换一换"/>

                    <TextView
                            android:id="@+id/tv_mark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/color_FE7915"
                            app:x_text_size="20"
                            app:x_layout_margin="#,10,#,#"
                            android:text="分"/>

                    <TextView
                            android:id="@+id/tv_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_FE7915"
                            app:x_text_size="30"
                            android:textStyle="bold"
                            android:layout_toLeftOf="@id/tv_mark"
                            android:text="8.4"/>


                </com.duoyue.lib.base.widget.XRelativeLayout>
            </com.duoyue.lib.base.widget.XLinearLayout>

            <include layout="@layout/item_first_chapter_content"/>

        </com.duoyue.lib.base.widget.XLinearLayout>

    </com.duoyue.app.ui.view.RandomPushBookScrollView>

    <com.duoyue.lib.base.widget.XRelativeLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_f5f5f5"
            app:x_layout_padding="#,22,32,22"
            android:visibility="gone"
            app:x_layout_size="#,150">

        <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:x_layout_padding="32,32,32,32"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:src="@mipmap/icon_back"/>

        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:id="@+id/cv_book_pic_title"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="2dp"
                app:cardMaxElevation="1dp"
                android:layout_toRightOf="@id/iv_back"
                app:cardElevation="2dp"
                android:background="@null"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content"
                app:x_layout_size="80,106"
                android:visibility="gone">

            <ImageView
                    android:id="@+id/iv_book_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView>

        <com.duoyue.lib.base.widget.XLinearLayout
                android:id="@+id/ll_book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/cv_book_pic_title"
                android:orientation="vertical"
                android:visibility="gone">

            <TextView
                    android:id="@+id/tv_book_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_1b1b1b"
                    app:x_text_size="30"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textStyle="bold"
                    app:x_layout_margin="32,#,120,#"
                    android:text="斗罗大陆"/>

            <TextView
                    android:id="@+id/tv_book_type_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已完结·106万字·玄幻"
                    app:x_layout_margin="32,18,#,#"
                    android:layout_below="@id/tv_book_name"/>
        </com.duoyue.lib.base.widget.XLinearLayout>

        <TextView
                android:id="@+id/tv_add_book_shelf_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/standard_red_main_color_c1"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_fe8b13_13"
                android:layout_centerVertical="true"
                android:gravity="center"
                app:x_layout_size="156,50"
                app:x_layout_margin="32,18,#,#"
                android:text="加入书架"
                android:visibility="gone"/>

    </com.duoyue.lib.base.widget.XRelativeLayout>

    <include
            android:id="@+id/load_prompt_layout"
            layout="@layout/load_prompt_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</com.duoyue.lib.base.widget.XRelativeLayout>