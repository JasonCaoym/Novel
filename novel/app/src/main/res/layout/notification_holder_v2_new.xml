<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="1dp"
                android:paddingBottom="2dp"
>

    <LinearLayout
            android:id="@+id/notification_hold_new_books"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:visibility="visible"
    >
        <RelativeLayout
                android:id="@+id/notification_hold_new_first_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:paddingBottom="3dp"
                android:paddingTop="2dp"
                android:visibility="visible"
                android:orientation="horizontal"
        >
            <ImageView
                    android:id="@+id/notification_hold_new_img1"
                    android:layout_width="35dp"
                    android:layout_height="47dp"
                    android:src="@mipmap/a"
            />

            <TextView
                    android:id="@+id/notification_hold_new_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:layout_toRightOf="@id/notification_hold_new_img1"
                    android:textColor="@color/color_1b1b1b"
            />

            <TextView
                    android:id="@+id/notification_hold_new_grade1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingTop="2dp"
                    android:textSize="13sp"
                    android:layout_below="@id/notification_hold_new_name1"
                    android:layout_toRightOf="@id/notification_hold_new_img1"
                    android:textColor="@color/color_898989"
            />
        </RelativeLayout>


        <Button
                android:layout_width="76dp"
                android:layout_height="28dp"
                android:text="@string/read_continue"
                android:id="@+id/btn_huan"
                android:onClick="huan"
                android:background="@drawable/ad_round_main_bg"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
        />
    </LinearLayout>


</RelativeLayout>