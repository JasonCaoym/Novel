<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                         xmlns:app="http://schemas.android.com/apk/res-auto"
                                         android:layout_width="wrap_content"
                                         android:id="@+id/xfl_book_list"
                                         android:layout_marginTop="15dp"
                                         android:layout_marginBottom="15dp"
                                         android:layout_height="wrap_content">


    <com.duoyue.lib.base.widget.XRelativeLayout
            android:layout_width="wrap_content"
            app:x_layout_size="98,98"
            android:id="@+id/xll_new_book_list"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="match_parent"
                android:id="@+id/iv_icon"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"/>


    </com.duoyue.lib.base.widget.XRelativeLayout>

    <TextView android:layout_width="wrap_content"
              android:textColor="@color/white"
              app:x_text_size="18"
              app:x_layout_padding="7,#,7,#"
              android:id="@+id/tv_distance"
              android:gravity="center"
              app:x_layout_size="#,30"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal|bottom"/>
</com.duoyue.lib.base.widget.XFrameLayout>