<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/default_title_padding_lr"
    android:paddingRight="@dimen/default_title_padding_lr"
    android:orientation="horizontal">

    <include
        android:id="@+id/book_1"
        layout="@layout/books_horizontal_layout_item"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <include
        android:id="@+id/book_2"
        layout="@layout/books_horizontal_layout_item"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <include
        android:id="@+id/book_3"
        layout="@layout/books_horizontal_layout_item"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <include
        android:id="@+id/book_4"
        layout="@layout/books_horizontal_layout_item"/>
</LinearLayout>