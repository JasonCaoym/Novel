<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="17dp"
    android:paddingTop="15dp"
    android:paddingRight="17dp"
    android:paddingBottom="23dp">

    <com.duoyue.app.ui.widget.CustomImageView
        android:scaleType="centerCrop"
        android:id="@+id/book_cover"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/book_bg" />


    <com.duoyue.app.ui.widget.CustomImageView
        android:id="@+id/select_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/book_cover"
        android:layout_alignRight="@id/book_cover"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="-5dp"
        android:src="@mipmap/select"
        android:visibility="gone" />

    <com.duoyue.app.ui.widget.CustomImageView
        android:id="@+id/update_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/book_cover"
        android:layout_alignTop="@id/book_cover"
        android:src="@mipmap/book_update"
        android:visibility="gone" />

    <TextView
        android:id="@+id/book_name"
        style="@style/base_text"
        android:layout_width="wrap_content"
        android:layout_below="@id/book_cover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:textColor="@color/standard_black_first_level_color_c3"
        android:textSize="@dimen/standard_text_size_big"
        tools:text="书城" />

</RelativeLayout>