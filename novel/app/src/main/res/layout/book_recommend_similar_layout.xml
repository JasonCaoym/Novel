<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                          xmlns:app="http://schemas.android.com/apk/res-auto"
                                          android:layout_width="match_parent"
                                          android:layout_height="match_parent"
                                          android:background="@color/white"
                                          android:orientation="vertical">

    <com.duoyue.lib.base.widget.XRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:x_layout_size="#,112"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:x_text_size="36"
                android:textColor="@color/color_1b1b1b"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                app:x_layout_padding="32,0,0,0"
                android:text="@string/read_recoomend_title"
            />

            <ImageView
                android:id="@+id/book_end_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_switch"
                android:layout_centerVertical="true"
                android:clickable="true"
                app:x_layout_padding="80,36,32,36"

            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:x_text_size="24"
                android:clickable="false"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/book_end_switch"
                android:textColor="@color/color_898989"
                android:layout_alignParentRight="true"
                app:x_layout_padding="0,0,68,0"
                android:text="@string/change_once"
            />

    </com.duoyue.lib.base.widget.XRelativeLayout>

    <com.duoyue.lib.base.widget.XRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
                android:background="@color/white"
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <include
                android:id="@+id/load_prompt_layout"
                layout="@layout/load_prompt_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_below="@+id/toolbar_layout"/>
    </com.duoyue.lib.base.widget.XRelativeLayout>
</com.duoyue.lib.base.widget.XLinearLayout>