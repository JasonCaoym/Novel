<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@color/white"
                                            android:gravity="center_horizontal">

    <com.duoyue.lib.base.widget.XLinearLayout
            android:id="@+id/ll_beans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

        <com.duoyue.lib.base.widget.XLinearLayout
                android:id="@+id/ll_read_time"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_read_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_1b1b1b"
                    app:x_text_size="54"
                    android:text="0"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:x_layout_margin="#,20,#,#"
                    app:x_text_size="24"
                    android:textColor="@color/text_color_505050"
                    android:text="阅读时长(分)"/>
        </com.duoyue.lib.base.widget.XLinearLayout>

        <com.duoyue.lib.base.widget.XLinearLayout
                android:id="@+id/ll_book_shelf_num"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                app:x_layout_margin="128,#,128,#"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_book_shelf_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_1b1b1b"
                    app:x_text_size="54"
                    android:text="0"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:x_layout_margin="#,20,#,#"
                    app:x_text_size="24"
                    android:textColor="@color/text_color_505050"
                    android:text="书架收藏"/>
        </com.duoyue.lib.base.widget.XLinearLayout>

        <com.duoyue.lib.base.widget.XLinearLayout
                android:id="@+id/ll_my_book_bean"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_my_book_bean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_1b1b1b"
                    app:x_text_size="54"
                    android:text="0"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:x_layout_margin="#,20,#,#"
                    app:x_text_size="24"
                    android:textColor="@color/text_color_505050"
                    android:text="我的书豆"/>
        </com.duoyue.lib.base.widget.XLinearLayout>
    </com.duoyue.lib.base.widget.XLinearLayout>


    <com.duoyue.lib.base.widget.XRelativeLayout
            android:id="@+id/rl_free_ad"
            android:layout_width="match_parent"
            android:layout_below="@id/ll_beans"
            app:x_layout_margin="21,43,21,#"
            app:x_layout_size="#,190"
            android:background="@mipmap/no_ad_back"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FFF7EA"
                app:x_text_size="36"
                android:gravity="center"
                android:drawableLeft="@mipmap/vip_icon"
                app:x_text_drawable_padding="21"
                app:x_layout_margin="55,49,#,84"
                android:text="免广告特权"/>

        <TextView
                android:id="@+id/tv_to_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:x_layout_size="140,52"
                android:gravity="center"
                app:x_text_size="24"
                android:textColor="@color/standard_red_main_color_c1"
                app:x_layout_margin="12,49,51,#"
                android:background="@drawable/bg_fff7ea_13"
                android:layout_alignParentRight="true"
                android:text="去开启"/>

        <com.duoyue.app.ui.view.CountDownView
                android:id="@+id/cdv_count_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                app:x_layout_margin="12,55,51,#"/>

        <TextView
                android:id="@+id/tv_residue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FFF7EA"
                android:layout_toLeftOf="@id/cdv_count_down"
                app:x_layout_margin="8,60,#,#"
                android:visibility="gone"
                app:x_text_size="25"
                android:text="剩余"/>
    </com.duoyue.lib.base.widget.XRelativeLayout>

</com.duoyue.lib.base.widget.XRelativeLayout>