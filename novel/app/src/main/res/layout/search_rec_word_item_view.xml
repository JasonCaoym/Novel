<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    tools:showIn="@layout/search_rec_words_view"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/index"
        style="@style/base_text"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:textSize="@dimen/standard_text_size_medium"
        android:textColor="@color/white"
        android:background="@drawable/search_rec_word_index_bg"
        tools:text="1"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/word"
        style="@style/base_text"
        android:textSize="@dimen/standard_text_size_big"
        android:textColor="@color/standard_text_color_gray"
        tools:text="1sdasdf"
        android:gravity="center"
        android:layout_marginLeft="6dp"
        />
</LinearLayout>