<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent" android:layout_height="match_parent"
                                            android:background="@color/white"
                                            tools:ignore="MissingDefaultResource">

    <com.duoyue.app.ui.widget.CustomImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/default_start_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/start_bg"
            android:scaleType="centerCrop"/>


    <FrameLayout
            android:id="@+id/splash_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ad_bottom_layout"
            android:visibility="visible"/>

    <FrameLayout
            android:id="@+id/splash_container2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ad_bottom_layout"
            android:visibility="gone"/>

    <FrameLayout
            android:id="@+id/splash_shade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:clickable="true"
            android:visibility="gone"/>

    <TextView
            android:id="@+id/skip_view"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:background="@drawable/background_circle"
            android:gravity="center"
            android:visibility="visible"
            android:text="@string/click_to_skip"
            android:textColor="@android:color/white"
            android:textSize="15sp"/>

    <com.duoyue.lib.base.widget.XRelativeLayout
            android:id="@+id/ad_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_alignParentBottom="true">

        <com.duoyue.app.ui.widget.CustomImageView
                android:id="@+id/line_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@mipmap/ad_bottom_line"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/line_img"
                android:layout_marginTop="-1dp"
                android:visibility="gone"
                android:background="@color/white"/>

        <com.duoyue.app.ui.widget.CustomImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_centerInParent="true"
                android:src="@mipmap/ad_bottom_icon"/>

    </com.duoyue.lib.base.widget.XRelativeLayout>
    <!-- 启动加载页面(登陆失败情况下展示) -->
    <include android:id="@+id/loading_page_id" android:visibility="gone" layout="@layout/loading_page"/>
</com.duoyue.lib.base.widget.XRelativeLayout>