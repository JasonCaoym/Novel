<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <include
            android:id="@+id/fixed_module_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/book_city_module_item_view_v2"/>

    <include
            android:id="@+id/fix_row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fixed_module_title"
            layout="@layout/book_item_view"/>

    <include
            android:id="@+id/fix_row_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fix_row_1"
            layout="@layout/book_item_view"/>

    <include
            android:id="@+id/fix_row_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fix_row_2"
            layout="@layout/book_item_view"/>

    <include
            android:id="@+id/fix_row_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fix_row_3"
            layout="@layout/book_item_view"/>

    <include
            android:id="@+id/fix_row_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fix_row_4"
            layout="@layout/book_item_view"/>

    <View
            android:id="@+id/fix_row_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:x_layout_size="#,16"
            android:layout_below="@+id/fix_row_5"
            android:background="@color/standard_div_line_color"/>

</com.duoyue.lib.base.widget.XRelativeLayout>