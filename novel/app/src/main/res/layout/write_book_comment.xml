<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                         xmlns:app="http://schemas.android.com/apk/res-auto"
                                         android:layout_width="match_parent"
                                         android:layout_height="match_parent">

    <com.duoyue.lib.base.widget.XLinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="match_parent">


        <include layout="@layout/toolbar_layout_view"/>

        <RatingBar
                android:id="@+id/book_comment_item_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:x_layout_margin="0,40,0,0"
                android:isIndicator="false"
                android:layout_gravity="center_horizontal"
                android:numStars="5"
                android:rating="5"
                android:stepSize="1"
                android:progressDrawable="@drawable/book_comment_ratingbar"
        />


        <View android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:x_layout_size="#,2"
              android:background="#F5F5F5"
              app:x_layout_margin="0,61,0,0"/>
        <EditText android:layout_width="match_parent"
                  android:id="@+id/et_comment"
                  android:layout_height="wrap_content"
                  app:x_layout_padding="32,29,32,29"
                  android:textCursorDrawable="@drawable/edit_cursor"
                  android:lineSpacingExtra="5dp"
                  app:x_text_size="30"
                  android:gravity="left"
                  android:textColorHint="#B2B2B2"
                  android:hint="@string/text_comment"
                  android:background="@color/white"/>
        <View android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:x_layout_size="#,2"
              android:background="#F5F5F5"/>

    </com.duoyue.lib.base.widget.XLinearLayout>

    <include layout="@layout/dialog_loading" android:visibility="gone" android:id="@+id/view_loading"/>
</com.duoyue.lib.base.widget.XFrameLayout>


