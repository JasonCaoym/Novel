<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                          xmlns:app="http://schemas.android.com/apk/res-auto"
                                          android:layout_width="wrap_content"
                                          android:orientation="vertical"
                                          android:layout_height="wrap_content">

    <com.duoyue.lib.base.widget.XLinearLayout app:x_layout_margin="32,30,0,0" android:layout_width="wrap_content"
                                              android:layout_height="wrap_content"
                                              android:orientation="horizontal"
                                              android:id="@+id/xll_item">
        <TextView  android:id="@+id/tv_all"
                  android:textColor="@color/white"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  app:x_layout_size="32,32"
                  app:x_text_size="24"
                  android:includeFontPadding="false"
                  app:x_layout_margin="0,0,22,0"/>

        <TextView android:includeFontPadding="false"
                  android:gravity="center_vertical"
                  android:maxEms="7"
                  android:ellipsize="end"
                  android:maxLines="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_item_all"
                  android:textColor="@color/book_shelf_top_text"
                  app:x_text_size="28"/>

        <com.duoyue.app.ui.widget.CustomImageView
                android:id="@+id/iv_fire"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:src="@mipmap/bg_fire" android:layout_gravity="center_vertical" app:x_layout_margin="10,0,0,0"/>

    </com.duoyue.lib.base.widget.XLinearLayout>


</com.duoyue.lib.base.widget.XLinearLayout>