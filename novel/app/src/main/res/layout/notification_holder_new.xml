<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/notification_hold_new_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="17dp"
            android:paddingTop="4dp"
            android:paddingRight="17dp"
            android:text="@string/notification_hold_new_title"
            android:textColor="@color/color_1b1b1b"
            android:textSize="13sp"
            android:textStyle="bold"
            android:visibility="gone" />

    <TextView
            android:id="@+id/notification_hold_empty_new_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notification_hold_new_title"
            android:layout_marginTop="3dp"
            android:paddingLeft="17dp"
            android:paddingTop="4dp"
            android:paddingRight="17dp"
            android:text="@string/notification_hold_sub_title"
            android:textColor="@color/color_898989"
            android:textSize="14sp"
            android:visibility="gone" />

    <LinearLayout
            android:weightSum="2"
            android:layout_marginLeft="8dp"
            android:id="@+id/notification_hold_new_books"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:visibility="visible">

        <RelativeLayout
                android:id="@+id/notification_hold_new_first_layout"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:visibility="visible">

            <ImageView

                    android:id="@+id/notification_hold_new_img1"
                    android:layout_width="35dp"
                    android:layout_height="47dp"
                    android:src="@mipmap/a" />

            <TextView
                    android:maxEms="7"
                    android:id="@+id/notification_hold_new_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/notification_hold_new_img1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_1b1b1b"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/notification_hold_new_grade1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/notification_hold_new_name1"
                    android:layout_toRightOf="@id/notification_hold_new_img1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/color_fe8b13"
                    android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/notification_hold_new_second_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:visibility="visible">

            <ImageView
                    android:id="@+id/notification_hold_new_img2"
                    android:layout_width="35dp"
                    android:layout_height="47dp"
                    android:src="@mipmap/a" />

            <TextView
                    android:maxEms="7"
                    android:id="@+id/notification_hold_new_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/notification_hold_new_img2"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_1b1b1b"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/notification_hold_new_grade2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/notification_hold_new_name2"
                    android:layout_toRightOf="@id/notification_hold_new_img2"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/color_fe8b13"
                    android:textSize="13sp" />

            <TextView
                    android:id="@+id/btn_huan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/notification_hold_new_img2"
                    android:layout_marginRight="8dp"
                    android:drawableLeft="@mipmap/bg_huan_x"
                    android:drawablePadding="5dp"
                    android:includeFontPadding="false"
                    android:gravity="center_vertical"
                    android:text="换一换"
                    android:textColor="@color/color_fe8b13" />
        </RelativeLayout>


    </LinearLayout>

