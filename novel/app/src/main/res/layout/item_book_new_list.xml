<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                          xmlns:app="http://schemas.android.com/apk/res-auto"
                                          android:layout_width="match_parent"
                                          android:orientation="vertical"
                                          android:layout_height="wrap_content">


    <com.duoyue.lib.base.widget.XRelativeLayout android:layout_width="match_parent"
                                                app:x_layout_margin="32,40,32,36"
                                                android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/black"
                  android:text="热门书单"
                  android:textStyle="bold"
                  app:x_text_size="36"
                  android:includeFontPadding="false"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/more"
                  android:layout_alignParentRight="true"
                  android:includeFontPadding="false"
                  android:drawablePadding="6dp"
                  app:x_text_size="24"
                  android:id="@+id/tv_more"
                  android:textColor="@color/color_898989_"
                  android:layout_centerVertical="true"
                  android:drawableRight="@mipmap/bd_arrow_right"/>

    </com.duoyue.lib.base.widget.XRelativeLayout>

    <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                            android:scrollbars="none"
                                            android:id="@+id/rv_hot_list"
                                            android:layout_height="wrap_content"/>


</com.duoyue.lib.base.widget.XLinearLayout>