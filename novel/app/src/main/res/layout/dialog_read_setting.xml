<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                          xmlns:app="http://schemas.android.com/apk/res-auto"
                                          android:id="@+id/read_setting_ll_menu"
                                          android:layout_width="match_parent"
                                          android:layout_height="wrap_content"
                                          android:layout_alignParentBottom="true"
                                          android:background="@color/read_menu_bg_day"
                                          android:clickable="true"
                                          android:orientation="vertical"
                                          android:paddingLeft="17dp"
                                          android:paddingTop="20dp"
                                          android:paddingRight="17dp"
                                          android:paddingBottom="20dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/font_size"
                android:textColor="@color/standard_black_first_level_color_c3"
                android:textSize="@dimen/standard_tx_3"/>

        <TextView
                android:id="@+id/read_setting_tv_font_minus"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_read_setting_normal"
                android:gravity="center"
                android:text="A-"
                android:textColor="@color/standard_black_second_level_color_c4"
                android:textSize="@dimen/standard_tx_4"/>

        <TextView
                android:id="@+id/read_setting_tv_font_plus"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="17dp"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_read_setting_normal"
                android:gravity="center"
                android:padding="5dp"
                android:text="A+"
                android:textColor="@color/standard_black_second_level_color_c4"
                android:textSize="@dimen/standard_tx_4"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/bright_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:clickable="true"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/bright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brightness"
                android:textColor="@color/standard_black_first_level_color_c3"
                android:textSize="@dimen/standard_tx_3"/>

        <com.duoyue.app.ui.widget.CustomImageView
                android:id="@+id/read_setting_iv_brightness_minus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:scaleType="center"
                android:src="@mipmap/icon_brightness_decrease"/>

        <SeekBar
                android:id="@+id/read_setting_sb_brightness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="255"
                android:maxHeight="3dp"
                android:minHeight="3dp"
                android:duplicateParentState="false"
                android:splitTrack="false"
                android:progressDrawable="@drawable/seekbar_bg"
                android:thumb="@drawable/seekbar_thumb"
                android:thumbOffset="10dp"/>

        <com.duoyue.app.ui.widget.CustomImageView
                android:id="@+id/read_setting_iv_brightness_plus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:scaleType="center"
                android:src="@mipmap/icon_brightness_increase"/>

        <CheckBox
                android:id="@+id/read_setting_cb_brightness_auto"
                style="@style/WY.Theme.TextAppearance.Read.BottomMenu"
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_btn_read_setting_bg"
                android:button="@null"
                android:gravity="center"
                android:text="系统"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/background"
                android:textColor="@color/standard_black_first_level_color_c3"
                android:textSize="@dimen/standard_tx_3"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/read_setting_rv_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:scrollbars="none"/>
    </LinearLayout>

</com.duoyue.lib.base.widget.XLinearLayout>
