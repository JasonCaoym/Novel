<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="3dp"
            app:cardMaxElevation="1dp"
            app:cardElevation="2dp"
            app:x_layout_margin="25,#,25,29"
            android:background="@null"
            android:id="@+id/cv"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content"
            app:x_layout_size="#,267">

    <ImageView android:layout_width="match_parent"
               android:id="@+id/iv_bg"
               android:layout_height="match_parent"
             />

    </android.support.v7.widget.CardView>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tv_name"
              android:includeFontPadding="false"
              app:x_text_size="26"
              android:layout_toLeftOf="@+id/tv_read"
              android:maxLines="2"
              android:ellipsize="end"
              android:layout_alignBottom="@+id/tv_read"
              android:textColor="@color/book_shelf_top_text"
              android:layout_alignLeft="@+id/cv"
              android:layout_below="@+id/cv"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:x_text_size="22"
              android:id="@+id/tv_read"
              android:text="试读"
              app:x_layout_margin="#,#,#,39"
              android:drawableTop="@mipmap/bg_go_read"
              android:layout_below="@+id/cv"
              android:layout_alignRight="@+id/cv"
              android:textColor="@color/color_739fff"/>


</com.duoyue.lib.base.widget.XRelativeLayout>