<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:id="@+id/xll_icon"
                                            android:layout_height="wrap_content">


    <ImageView android:layout_width="wrap_content"
               app:x_layout_size="84,84"
               android:scaleType="centerCrop"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:id="@+id/iv_icon"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/color_505050"
              app:x_text_size="24"
              android:includeFontPadding="false"
              android:id="@+id/tv_icon_text"
              android:layout_below="@+id/iv_icon"
              android:layout_centerHorizontal="true"/>
</com.duoyue.lib.base.widget.XRelativeLayout>