<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/read_dl_slide"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

    <com.duoyue.lib.base.widget.XRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

        <!--阅读页面-->
        <com.duoyue.mianfei.xiaoshuo.read.page.PageView
                android:id="@+id/pv_read_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_above="@+id/read_bottom_ad_root"
                tools:visibility="visible"/>

        <include
                layout="@layout/toolbar_layout_read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:x_layout_size="#,120"
                android:visibility="gone"
        />

        <com.duoyue.lib.base.widget.XRelativeLayout
                android:id="@+id/read_loading_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone">

            <ProgressBar
                    style="?android:progressBarStyle"
                    android:id="@+id/progress_bar_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:indeterminateDrawable="@drawable/loading_progress_bar"
                    android:indeterminateDuration="700"
                    android:indeterminateBehavior="repeat"
                    app:x_layout_margin="#,#,#,300"
                    android:visibility="visible"/>

        </com.duoyue.lib.base.widget.XRelativeLayout>

        <TextView
                android:id="@+id/read_banner_close_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="点击关闭广告"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/white"
                app:x_layout_padding="15,#,15,10"
                app:x_text_size="24"
                app:x_layout_margin="#,#,14,14"
                android:background="@mipmap/read_close_tip_bg"
                android:layout_above="@+id/read_bottom_ad_root"
        />
        <!-- 底部常驻广告 -->
        <com.duoyue.lib.base.widget.AdShadeViewGroup
                android:id="@+id/read_bottom_ad_root"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="56dp"
                android:visibility="visible"
        >

            <TextView
                    android:id="@+id/read_bottom_ad_tip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="多阅免费小说 真的全部免费"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/text_gray_999"
            />

            <View
                    android:id="@+id/read_bottom_white_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:background="@color/white"
                    />
            <com.duoyue.lib.base.widget.AdFrameLayout
                    android:id="@+id/read_bottom_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:visibility="visible"
            />

            <ImageView
                    android:id="@+id/read_ad_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/read_bottom_ad_clear"
                    android:visibility="gone"
                    app:x_layout_padding="30,#,#,25"
                    app:x_layout_size="67,62"
                    android:layout_alignParentRight="true"
            />

        </com.duoyue.lib.base.widget.AdShadeViewGroup>


        <!--切换页面提示-->
        <com.duoyue.lib.base.widget.XLinearLayout
                android:id="@+id/read_error_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:visibility="gone"
                app:x_layout_padding="#,250,#,#">

            <Button
                    android:id="@+id/read_btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_btn_read_setting_select"
                    android:gravity="center"
                    android:text="@string/back"
                    android:textColor="@color/standard_red_main_color_c1"
                    app:x_layout_size="200,66"
                    app:x_layout_margin="#,#,15,#"
                    android:visibility="visible"/>

            <Button
                    android:id="@+id/read_btn_retry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/extra_page_retry"
                    android:gravity="center"
                    android:text="@string/retry"
                    android:textColor="@color/white"
                    app:x_layout_size="200,66"
                    app:x_layout_margin="15,#,#,#"
                    android:visibility="visible"/>

        </com.duoyue.lib.base.widget.XLinearLayout>
        <!--底部页面-->
        <com.duoyue.lib.base.widget.XLinearLayout
                android:id="@+id/read_ll_bottom_menu_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:clickable="false"
                android:orientation="vertical"
                android:translationY="56dp"
                tools:visibility="visible">

            <com.duoyue.lib.base.widget.XLinearLayout
                    android:id="@+id/layout_download_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#801B1B1B"
                    app:x_layout_padding="34,#,#,#"
                    android:visibility="gone">

                <TextView
                        android:id="@+id/tv_download_bottom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textColor="@color/white"/>

                <com.duoyue.app.ui.widget.CustomImageView
                        android:id="@+id/iv_download_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_close"
                        android:layout_gravity="center_vertical"
                        app:x_layout_padding="16,16,16,16"/>

            </com.duoyue.lib.base.widget.XLinearLayout>

            <LinearLayout
                    android:id="@+id/read_ll_bottom_menu"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/read_tv_category"
                        style="@style/WY.Theme.TextAppearance.Read.BottomMenu.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/icon_read_botton_list_g"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="@string/catalogue"/>

                <TextView
                        android:id="@+id/read_tv_night_mode"
                        style="@style/WY.Theme.TextAppearance.Read.BottomMenu.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/icon_read_botton_night_g"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="@string/night"/>

                <TextView
                        android:id="@+id/read_tv_setting"
                        style="@style/WY.Theme.TextAppearance.Read.BottomMenu.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/icon_read_botton_install_g"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="@string/setting"/>
            </LinearLayout>

        </com.duoyue.lib.base.widget.XLinearLayout>

        <LinearLayout
                android:clickable="true"
                android:id="@+id/guide_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#AA161616"
                android:orientation="horizontal"
                android:visibility="gone">

            <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableTop="@mipmap/icon_read_guide_last_page"
                        android:drawablePadding="10dp"
                        android:text="@string/last_page"
                        android:textColor="@color/standard_black_third_level_color_c5"
                        android:textSize="@dimen/standard_tx_3"/>

                <View
                        android:layout_gravity="right"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/standard_black_third_level_color_c5"/>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableTop="@mipmap/icon_read_guide_menu"
                        android:drawablePadding="10dp"
                        android:text="@string/menu"
                        android:textColor="@color/standard_black_third_level_color_c5"
                        android:textSize="@dimen/standard_tx_3"/>

                <TextView
                        android:id="@+id/guide_btn"
                        android:layout_width="85dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="120dp"
                        android:background="@drawable/read_guide_btn_bg"
                        android:gravity="center"
                        android:text="@string/know"
                        android:textColor="@color/standard_black_third_level_color_c5"/>

                <View
                        android:layout_gravity="right"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/standard_black_third_level_color_c5"/>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableTop="@mipmap/icon_read_guide_next_page"
                        android:drawablePadding="10dp"
                        android:text="@string/next_page"
                        android:textColor="@color/standard_black_third_level_color_c5"
                        android:textSize="@dimen/standard_tx_3"/>
            </FrameLayout>

        </LinearLayout>
    </com.duoyue.lib.base.widget.XRelativeLayout>

    <!--侧滑栏-->
    <!--  <LinearLayout
          android:layout_width="310dp"
          android:layout_height="match_parent"
          android:layout_gravity="start"
          android:orientation="horizontal">-->

    <RelativeLayout
            android:layout_width="310dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="start">

        <RelativeLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/white"
                android:clickable="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="13dp">

            <TextView
                    android:id="@+id/tv_book_name"
                    android:textStyle="bold"
                    style="@style/base_text"
                    android:layout_marginTop="41dp"
                    android:layout_marginRight="90dp"
                    android:textSize="18sp"/>


            <TextView
                    android:id="@+id/catalogue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="@string/catalogue"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/standard_tx_1"/>

            <TextView
                    android:id="@+id/order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:drawableLeft="@mipmap/icon_read_botton_list_along"
                    android:drawablePadding="3dp"
                    android:text="@string/order_normal"
                    android:textColor="@color/color_1b1b1b"
                    android:textSize="15sp"/>
        </RelativeLayout>


        <com.duoyue.mianfei.xiaoshuo.read.ui.read.TwoDirectionPullListView
                android:id="@+id/rv_read_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/title_layout"
                android:background="@color/white"
                android:divider="@null"
                android:scrollbars="none"/>
    </RelativeLayout>

    <!-- <com.duoyue.app.ui.widget.CustomImageView
         android:id="@+id/catalogue_btn"
         android:layout_width="26dp"
         android:layout_height="62dp"
         android:layout_gravity="center_vertical"
         android:scaleType="fitXY" />-->

    <!-- </LinearLayout>-->
</android.support.v4.widget.DrawerLayout>
