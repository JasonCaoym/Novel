<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:id="@+id/xrl_search"
                                            android:paddingBottom="25dp"
                                            android:layout_height="wrap_content">

    <View android:layout_width="match_parent" android:layout_height="wrap_content" app:x_layout_size="0,39"
          android:layout_alignParentTop="true" android:id="@+id/view_top" android:visibility="visible"/>

    <com.duoyue.app.ui.widget.CustomImageView
            app:x_layout_margin="32,#,#,#"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
               android:layout_below="@+id/view_top"
               android:background="@drawable/book_bg"
               android:scaleType="centerCrop"
               app:x_layout_size="160,217"
               android:id="@+id/iv_icon"
               app:x_text_size="34"/>

    <TextView android:id="@+id/tv_book_name"
              android:maxLines="1"
              android:ellipsize="end"
              android:layout_width="wrap_content"
              app:x_text_size="34"
              android:textColor="@color/color_1b1b1b"
              android:layout_height="wrap_content"
              app:x_layout_margin="30,0,0,0"
              android:layout_toRightOf="@+id/iv_icon"
              android:layout_alignTop="@+id/iv_icon"/>


    <TextView android:id="@+id/tv_desc" android:textColor="@color/color_666666"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxLines="2"
              android:ellipsize="end"
              android:layout_below="@+id/tv_book_name"
              android:layout_toRightOf="@+id/iv_icon"
              android:layout_alignRight="@+id/tv_fen"
              app:x_text_size="26"
              app:x_layout_margin="0,38,0,0"
              android:layout_alignLeft="@+id/tv_book_name"/>

    <TextView android:id="@+id/tv_author"
              android:drawablePadding="5dp"
              android:drawableLeft="@mipmap/author"
              android:textColor="@color/color_898989"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/iv_icon"
              android:layout_toRightOf="@+id/iv_icon"
              app:x_text_size="24"
              app:x_layout_margin="0,0,0,13"
              android:layout_alignLeft="@+id/tv_book_name"/>

    <TextView app:x_layout_padding="10,0,10,0" android:layout_width="wrap_content"
              android:background="@drawable/bg_fc9b32"
              app:x_layout_size="70,34"
              android:gravity="center"
              android:textColor="@color/color_FC9B32E"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              app:x_text_size="20"
                app:x_layout_margin="#,#,32,#"
              android:layout_alignBaseline="@+id/tv_author"
              android:id="@+id/tv_fen"/>

    <TextView android:layout_width="wrap_content"
              android:background="@drawable/bg_898989"
              app:x_layout_margin="0,0,14,0"
              app:x_layout_padding="10,0,10,0"
              app:x_layout_size="#,34"
              android:layout_toLeftOf="@+id/tv_fen"
              android:gravity="center"
              android:textColor="#898989"
              android:layout_height="wrap_content"
              app:x_text_size="20"
              android:layout_alignBaseline="@+id/tv_author"
              android:id="@+id/tv_zi"/>

    <TextView app:x_layout_padding="10,0,10,0"
              android:layout_width="wrap_content"
              android:background="@drawable/bg_739fff"
              app:x_layout_margin="0,0,14,0"
              app:x_layout_size="#,34"
              android:layout_toLeftOf="@+id/tv_zi"
              android:gravity="center"
              android:textColor="#739FFF"
              android:layout_height="wrap_content"
              app:x_text_size="20"
              android:layout_alignBaseline="@+id/tv_author"
              android:id="@+id/tv_title"
    />


    <!--<View android:layout_width="match_parent" android:layout_height="wrap_content" app:x_layout_size="0,50"-->
          <!--android:layout_below="@+id/iv_icon"/>-->
</com.duoyue.lib.base.widget.XRelativeLayout>