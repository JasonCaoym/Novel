<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:descendantFocusability="blocksDescendants"
                                            android:layout_height="wrap_content">


    <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:x_layout_margin="32,40,32,40"
                                            android:overScrollMode="never"
                                            android:id="@+id/rv_title_module"
                                            android:scrollbars="none"/>
    <TextView
            android:layout_alignBaseline="@+id/rv_title_module"
            app:x_layout_margin="0,4,30,0"
            android:textColor="@color/color_898989_"
            app:x_text_size="24"
            android:layout_centerVertical="true"
            android:id="@+id/tv_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="换一换"
            android:drawablePadding="6dp"
            android:drawableRight="@mipmap/icon_switch"
            android:layout_alignParentRight="true"
    />

</com.duoyue.lib.base.widget.XRelativeLayout>