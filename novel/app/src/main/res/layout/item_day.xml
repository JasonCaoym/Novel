<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
    <com.duoyue.app.ui.widget.CustomImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/quote"
            app:x_layout_margin="162,92,#,#"/>

    <com.duoyue.lib.base.widget.XRelativeLayout
            android:id="@+id/xrl_book_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:x_layout_margin="40,32,#,#"
            app:x_layout_size="136,186">
        <com.duoyue.app.ui.widget.CustomImageView
                android:id="@+id/iv_book_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </com.duoyue.lib.base.widget.XRelativeLayout>

    <com.duoyue.lib.base.widget.XLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/xrl_book_cover"
            app:x_layout_margin="32,32,54,#"
            android:gravity="center_vertical">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="《"
                  app:x_text_size="32"
                  android:textColor="@color/color_1b1b1b"
                  android:textStyle="bold"/>

        <TextView
                android:id="@+id/tv_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_1b1b1b"
                app:x_text_size="32"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="》"
                  app:x_text_size="32"
                  android:textColor="@color/color_1b1b1b"
                  app:x_layout_margin="#,#,22,#"
                  android:textStyle="bold"/>

        <TextView
                android:id="@+id/tv_referrer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_b2b2b2"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxLength="6"
                app:x_layout_margin="#,#,10,#"
                app:x_text_size="28"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recommend"
                android:textColor="@color/color_b2b2b2"
                app:x_text_size="28"/>

    </com.duoyue.lib.base.widget.XLinearLayout>

    <com.duoyue.lib.base.widget.XLinearLayout
            android:id="@+id/xll_book_introduction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/xrl_book_cover"
            android:layout_alignBottom="@+id/xrl_book_cover"
            app:x_layout_margin="32,90,54,#"
            android:gravity="center_vertical">

        <TextView
                android:id="@+id/tv_book_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/color_666666"
                android:lineSpacingMultiplier="1.3"
                android:maxLines="3"
                android:ellipsize="end"
                app:x_text_size="27"/>

    </com.duoyue.lib.base.widget.XLinearLayout>

    <com.duoyue.app.ui.widget.DrawableTextView
            android:id="@+id/tv_read_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/now_read"
            android:textColor="@color/standard_red_main_color_c1"
            app:x_layout_margin="#,#,54,#"
            app:x_text_size="26"
            android:layout_below="@+id/xrl_book_cover"
            android:drawableRight="@mipmap/icon_arrow_right_o"
            android:drawablePadding="6dp"/>
</com.duoyue.lib.base.widget.XRelativeLayout>