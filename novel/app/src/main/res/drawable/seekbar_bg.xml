<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <size android:height="1dp" />
            <corners android:radius="0.5dp" />
            <gradient
                android:endColor="@color/standard_black_fourth_level_color_c6"
                android:startColor="@color/standard_black_fourth_level_color_c6" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <size android:height="3dp" />
                <corners android:radius="1.5dp" />
                <gradient
                    android:endColor="@color/standard_red_main_color_c1"
                    android:startColor="@color/standard_red_main_color_c1" />
            </shape>
        </clip>
    </item>

</layer-list>