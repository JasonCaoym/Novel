<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="#000000">

    <com.duoyue.app.ui.widget.CustomImageView
        android:id="@+id/close_btn"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_gravity="right"
        android:src="@mipmap/ad_dailog_close" />

    <View
        android:layout_width="2dp"
        android:layout_height="47dp"
        android:layout_gravity="right"
        android:layout_marginTop="-1dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="-1dp"
        android:background="@color/white" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/ad_gdt_layout"
            android:layout_width="match_parent"
            android:layout_height="269dp"
            android:background="@drawable/dialog_bg"
            android:padding="4dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <RelativeLayout
            android:id="@+id/ad_big_single_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_bg"
            android:paddingLeft="11dp"
            android:paddingTop="16dp"
            android:paddingRight="11dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/ad_big_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/standard_black_second_level_color_c4"
                android:textSize="@dimen/standard_text_size_big"
                tools:text="这是一首简单的小情歌啊啊啊啊啊啊啊啊啊啊啊啊啊" />

            <com.zydm.base.widgets.RatioLayout
                android:id="@+id/img_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ad_big_title_tv"
                android:layout_marginTop="6dp"
                app:wh_ratio="1.78">

                <com.duoyue.app.ui.widget.CustomImageView
                    android:id="@+id/ad_big_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/icon_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/ad_big_iv"
                    android:layout_alignRight="@id/ad_big_iv"
                    android:layout_marginTop="2dp"
                    android:background="@color/ad_mark_bg"
                    android:paddingLeft="2dp"
                    android:paddingTop="1dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="1dp"
                    android:text="@string/ad"
                    android:textColor="@color/standard_black_third_level_color_c5"
                    android:textSize="10dp" />

                <com.zydm.base.widgets.CircleImageView
                    android:id="@+id/ad_big_brand_logo"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignRight="@id/ad_big_iv"
                    android:layout_alignBottom="@id/ad_big_iv"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    tools:src="@mipmap/icon_back_w" />

            </com.zydm.base.widgets.RatioLayout>

            <TextView
                android:id="@+id/ad_big_type_tv"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_below="@id/img_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:background="@drawable/ad_btn_bg"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/standard_tx_5"
                tools:text="立即下载" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>