<com.duoyue.lib.base.widget.XRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>
    <com.duoyue.lib.base.widget.XRelativeLayout
            android:id="@+id/ad_url_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="false"
    >

        <WebView
                android:id="@+id/ad_url_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:layout_centerInParent="true"
                android:visibility="gone"
            />
        <com.duoyue.lib.base.widget.GlideImageView
                android:id="@+id/ad_url_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:clickable="false"
        />
        <TextView
                android:id="@+id/ad_url_text_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广告"
                android:textSize="10sp"
                app:x_layout_padding="2,#,2,#"
                android:layout_marginBottom="1dp"
                android:background="@drawable/ad_txt_bg"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:visibility="visible"/>
    </com.duoyue.lib.base.widget.XRelativeLayout>

</com.duoyue.lib.base.widget.XRelativeLayout>