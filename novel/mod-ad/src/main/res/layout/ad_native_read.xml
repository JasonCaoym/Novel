<com.qq.e.ads.nativ.widget.NativeAdContainer xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:orientation="vertical"
>

    <com.duoyue.lib.base.widget.XRelativeLayout
            android:id="@+id/ad_read_main"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <TextView
                android:id="@+id/ad_read_title"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:ellipsize="end"
                android:clickable="false"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="你好吗"
                />

        <com.duoyue.lib.base.widget.XRelativeLayout
                android:id="@+id/ad_read_img_layout"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:clickable="false"
                app:x_layout_margin="0,0,0,0"
                android:layout_below="@+id/ad_read_title"
                android:layout_alignParentRight="true">

            <com.duoyue.lib.base.widget.GlideImageView
                    android:id="@+id/ad_read_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:clickable="false"
            />
            <FrameLayout
                    android:id="@+id/ad_read_video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
            />
            <TextView
                    android:id="@+id/ad_read_text_ad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="广告"
                    android:textSize="10sp"
                    app:x_layout_padding="2,#,2,#"
                    android:background="@drawable/ad_txt_bg"
                    app:x_layout_margin="5,#,#,#"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:visibility="visible"/>
        </com.duoyue.lib.base.widget.XRelativeLayout>

        <com.duoyue.lib.base.widget.XRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_below="@+id/ad_read_img_layout"
                android:paddingTop="10dp"
                android:orientation="horizontal"
        >
            <com.duoyue.lib.base.widget.GlideImageView
                    android:id="@+id/ad_read_source_icon"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:textColor="@color/text_gray_999"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/bg_dou"
                    android:layout_below="@id/ad_read_small_describtion"
            />

            <TextView
                    android:id="@+id/ad_read_describtion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:clickable="false"
                    android:text="呵呵"
                    android:ellipsize="end"
                    android:layout_toRightOf="@+id/ad_read_source_icon"
                    android:layout_toLeftOf="@+id/ad_read_download"
                    android:textSize="14sp"
            />

            <Button
                    android:id="@+id/ad_read_download"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    app:x_layout_size="146,#"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    android:text="@string/see_detail"
                    android:textColor="@color/white"
                    android:background="@drawable/ad_round_main_bg"
                    android:clickable="false"
                    android:layout_alignParentRight="true"
            />
        </com.duoyue.lib.base.widget.XRelativeLayout>
    </com.duoyue.lib.base.widget.XRelativeLayout>
</com.qq.e.ads.nativ.widget.NativeAdContainer>