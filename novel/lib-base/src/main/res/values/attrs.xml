<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RatioLayout">
        <attr name="wh_ratio" format="float"/>
        <attr name="is_base_h" format="boolean"/>
        <attr name="is_ignore_padding" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="FlowLayout">
        <attr name="lineSpacing" format="dimension"/>
        <attr name="maxLine" format="integer"/>
    </declare-styleable>


    <declare-styleable name="SettingSwitchView">
        <attr name="tintColor" format="reference|color"/>
        <attr name="outerStrokeWidth" format="reference|dimension"/>
        <attr name="shadowSpace" format="reference|dimension"/>
    </declare-styleable>


    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>
    
    <declare-styleable name="RollViewPager">
        <attr name="rollviewpager_hint_mode">
            <enum name="point" value="0" />
            <enum name="number" value="1" />
        </attr>
        <attr name="rollviewpager_hint_gravity">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="rollviewpager_hint_paddingRight" format="dimension"/>
        <attr name="rollviewpager_hint_paddingLeft" format="dimension"/>
        <attr name="rollviewpager_hint_paddingTop" format="dimension"/>
        <attr name="rollviewpager_hint_paddingBottom" format="dimension"/>

        <attr name="rollviewpager_play_delay" format="integer" />
        <attr name="rollviewpager_hint_color" format="color" />
        <attr name="rollviewpager_hint_alpha" format="integer" />
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" format="dimension"/>

        <attr name="stroke_width" format="dimension" />
        <attr name="stroke_color" format="color" />
        
        <attr name="type" format="integer">
            <enum name="circle" value="0"/>
            <enum name="round" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="WaveLoadingView">
        <attr name="wlv_borderWidth" format="dimension"/>
        <attr name="wlv_borderColor" format="color"/>
        <attr name="wlv_progressValue" format="integer"/>
        <attr name="wlv_shapeType" format="enum">
            <enum name="triangle" value="0" />
            <enum name="circle" value="1" />
            <enum name="square" value="2" />
            <enum name="rectangle" value="3" />
        </attr>
        <attr name="wlv_triangle_direction" format="enum">
            <enum name="north" value="0" />
            <enum name="south" value="1" />
            <enum name="east" value="2" />
            <enum name="west" value="3" />
        </attr>
        <attr name="wlv_round_rectangle" format="boolean"/>
        <attr name="wlv_round_rectangle_x_and_y" format="integer"/>
        <attr name="wlv_waveColor" format="color"/>
        <attr name="wlv_wave_background_Color" format="color"/>
        <attr name="wlv_waveAmplitude" format="float"/>
        <attr name="wlv_titleTop" format="string"/>
        <attr name="wlv_titleCenter" format="string"/>
        <attr name="wlv_titleBottom" format="string"/>
        <attr name="wlv_titleTopSize" format="dimension"/>
        <attr name="wlv_titleCenterSize" format="dimension"/>
        <attr name="wlv_titleBottomSize" format="dimension"/>
        <attr name="wlv_titleTopColor" format="color"/>
        <attr name="wlv_titleCenterColor" format="color"/>
        <attr name="wlv_titleBottomColor" format="color"/>
        <attr name="wlv_titleTopStrokeColor" format="color"/>
        <attr name="wlv_titleTopStrokeWidth" format="dimension"/>
        <attr name="wlv_titleBottomStrokeColor" format="color"/>
        <attr name="wlv_titleBottomStrokeWidth" format="dimension"/>
        <attr name="wlv_titleCenterStrokeColor" format="color"/>
        <attr name="wlv_titleCenterStrokeWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="RoundAngleFrameLayout">
        <attr name="radius" format="dimension" />
        <attr name="topLeftRadius" format="dimension" />
        <attr name="topRightRadius" format="dimension" />
        <attr name="bottomLeftRadius" format="dimension" />
        <attr name="bottomRightRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RoundRatioLayout">
        <attr name="angleRadius" format="dimension"/>
        <attr name="tlRadius" format="dimension"/>
        <attr name="trRadius" format="dimension"/>
        <attr name="blRadius" format="dimension"/>
        <attr name="brRadius" format="dimension"/>
        <attr name="whRatio" format="float"/>
    </declare-styleable>

    <declare-styleable name="MultiLineFlowLayout">
        <attr name="width_space" format="dimension"/>
        <attr name="height_space" format="dimension"/>
        <attr name="item_num" format="integer"/>
    </declare-styleable>

    <declare-styleable name="RedPacketStyle">
        <attr name="count" format="integer" />
        <attr name="speed" format="integer" />
        <attr name="max_size" format="float" />
        <attr name="min_size" format="float" />
    </declare-styleable>

    <declare-styleable name="HorizontalListView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>

    <declare-styleable name="XView">
        <attr name="x_layout_size" format="string" />
        <attr name="x_layout_min" format="string" />
        <attr name="x_layout_max" format="string" />
        <attr name="x_layout_margin" format="string" />
        <attr name="x_layout_padding" format="string" />
        <attr name="x_text_size" format="string" />
        <attr name="x_text_drawable_bounds" format="string" />
        <attr name="x_text_drawable_padding" format="string" />
        <attr name="x_shape_radius" format="string" />
    </declare-styleable>

    <declare-styleable name="ConvenientBanner">
        <attr name="canLoop" format="boolean" />
    </declare-styleable>


    <declare-styleable name="FlowXLayout">
        <attr name="maxLines" format="integer"/>
    </declare-styleable>
    <declare-styleable name="SmileyLoadingView">
        <!-- animation duration -->
        <attr name="duration" format="integer" />
        <!-- stroke width -->
        <attr name="strokeWidth" format="dimension" />
        <!-- stroke color -->
        <attr name="strokeColor" format="color" />
        <!-- animation repeat count -->
        <attr name="animRepeatCount" format="integer" />
    </declare-styleable>
</resources>
