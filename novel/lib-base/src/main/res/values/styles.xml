<resources>
    <!--在Android 4.4之前的版本上运行, 直接跟随系统主题-->
    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>
    <!-- Base application theme. -->
    <style name="BaseNoActionBarAppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:selectableItemBackground">@null</item>
        <item name="android:selectableItemBackgroundBorderless">@null</item>
    </style>

    <style name="AppWelcome" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/launcher_bg</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="base_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="horizontal_line_1dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/standard_div_line_color</item>
    </style>
    
    <style name="title_img_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/default_title_h</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">17dp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="title_text_btn_style" parent="title_img_btn_style">
        <item name="android:textSize">@dimen/standard_text_size_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/standard_text_color_light_gray</item>
        <item name="android:onClick">onClick</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="title_text_style" parent="base_text">
        <item name="android:layout_height">@dimen/default_title_h</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/default_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/title_btn_text</item>
    </style>
    
    <style name="title_text_left_style" parent="title_img_btn_style">
        <item name="android:textSize">@dimen/standard_tx_2</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColor">@color/standard_black_first_level_color_c3</item>
        <item name="android:clickable">false</item>
    </style>
    
    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_div_line_h</item>
        <item name="android:background">@color/standard_black_fourth_level_color_c6</item>
    </style>
    <style name="private_feedback_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/standard_text_color_light_gray</item>
        <item name="android:textSize">@dimen/standard_text_size_small</item>
    </style>
    <style name="title_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <style name="NormalDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_out</item>
    </style>
    
    <style name="ProgressBar.Horizontal" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress</item>
    </style>
    
    <style name="ProgressBar.Notification" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_notification</item>
    </style>
    
    
    <style name="BottomShareDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>


    <!--tag弹框-->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/show</item>
        <item name="android:windowExitAnimation">@anim/hide</item>
    </style>
    
</resources>
