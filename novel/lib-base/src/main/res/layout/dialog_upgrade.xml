<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

    <com.duoyue.lib.base.widget.XRelativeLayout
            android:id="@+id/dialog_parent_layout"
            android:layout_width="match_parent"
            app:x_layout_margin="48,#,48,#"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/dialog_bg">

        <com.duoyue.lib.base.widget.XRelativeLayout
                android:id="@+id/dialog_upgrade_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:x_layout_size="#,160"
                app:x_layout_padding="32,0,30,0"
                android:background="@drawable/upgrade_top_bg"
        >
            <TextView
                    android:id="@+id/dialog_upgrade_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="true"
                    android:layout_below="@+id/dialog_upgrade_bg"
                    android:text="发现新版本 "
                    app:x_layout_padding="0,40,0,0"
                    android:textColor="@color/text_black_333"
                    app:x_text_size="36"/>
            <TextView
                    android:id="@+id/dialog_upgrade_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    app:x_layout_margin="0,20,0,0"
                    android:layout_below="@+id/dialog_upgrade_title"
                    app:x_layout_size="80, 30"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/btn_orange_round"
                    app:x_text_size="20"
            />

            <TextView
                    android:id="@+id/dialog_upgrade_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    app:x_layout_margin="8,20,0,0"
                    android:layout_toRightOf="@+id/dialog_upgrade_version"
                    android:layout_below="@+id/dialog_upgrade_title"
                    android:textColor="@color/standard_red_main_color_c1"
                    android:gravity="center"
                    app:x_text_size="20"
            />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:x_layout_size="160,160"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/upgrade_bg"
            />
        </com.duoyue.lib.base.widget.XRelativeLayout>

        <com.duoyue.lib.base.widget.XScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialog_upgrade_top"
                android:id="@+id/dialog_upgrade_content_layout"
                app:x_layout_margin="32,30,40,35"
        >
            <TextView
                    android:id="@+id/dialog_upgrade_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.15"
                    android:scrollbars="none"
                    android:textColor="@color/text_gray_999"
                    app:x_text_size="28"
                    android:visibility="visible"/>
        </com.duoyue.lib.base.widget.XScrollView>
        <View
                android:id="@+id/dialog_upgrade_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:x_layout_size="#,2"
                android:layout_below="@+id/dialog_upgrade_content_layout"
                android:background="@color/divider_line"
        />

        <com.duoyue.lib.base.widget.XLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialog_upgrade_line"
                android:orientation="horizontal"
                app:x_layout_size="#,110">

            <TextView
                    android:id="@+id/dialog_upgrade_negative"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    app:x_text_size="32"
                    android:text="@string/cancel"
                    android:textColor="@color/text_black_333"
                    android:visibility="visible"/>
            <View
                    android:id="@+id/dialog_upgrade_divider"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:x_layout_size="2,#"
                    android:layout_below="@+id/dialog_upgrade_message"
                    android:background="@color/divider_line"
            />
            <TextView
                    android:id="@+id/dialog_upgrade_positive"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/upgrade_now"
                    app:x_text_size="32"
                    android:textColor="@color/standard_red_main_color_c1"
                    android:visibility="visible"/>
        </com.duoyue.lib.base.widget.XLinearLayout>
    </com.duoyue.lib.base.widget.XRelativeLayout>
</com.duoyue.lib.base.widget.XRelativeLayout>