<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:slv="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/tools">

    <com.zydm.base.widgets.refreshview.SmileyLoadingView
            android:id="@+id/loading_view"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            slv:duration="2000"
            slv:strokeWidth="4dp"/>

    <TextView
            android:id="@+id/tc_fail"
            app:x_layout_margin="#,15,#,#"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刷新失败"/>
</com.duoyue.lib.base.widget.XRelativeLayout>