<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:id="@+id/toolbar_layout"
                                            android:layout_width="match_parent"
                                            android:background="@color/white"
                                            android:layout_height="wrap_content">

    <com.duoyue.lib.base.widget.XRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:x_layout_size="#,96">


        <com.duoyue.lib.base.widget.XRelativeLayout
                android:id="@+id/left_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:x_layout_size="#,96">


            <ImageView
                    style="@style/title_img_btn_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/toolbar_back"
                    android:src="@mipmap/icon_back"
                    tools:ignore="ContentDescription"/>

            <TextView
                    android:id="@+id/toolbar_left_tv"
                    style="@style/title_text_left_style"/>
        </com.duoyue.lib.base.widget.XRelativeLayout>

        <TextView
                android:id="@+id/toolbar_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                app:x_text_size="30"
                android:textColor="@color/text_color_898989"
                app:x_layout_padding="36,#,34,#"
                android:layout_alignParentRight="true"/>


        <TextView
                android:id="@+id/toolbar_title"
                style="@style/title_text_style"
                android:layout_width="wrap_content"
                app:x_layout_margin="50,#,50,#"
                android:layout_centerInParent="true"
                android:gravity="center"/>
    </com.duoyue.lib.base.widget.XRelativeLayout>
</com.duoyue.lib.base.widget.XRelativeLayout>