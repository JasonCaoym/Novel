<?xml version="1.0" encoding="utf-8"?>
<com.duoyue.lib.base.widget.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:id="@+id/toolbar_layout" style="@style/title_layout_style">
    <com.duoyue.lib.base.widget.XRelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                                app:x_layout_size="#,90" android:gravity="center_vertical">
        <com.duoyue.lib.base.widget.XRelativeLayout android:id="@+id/left_container" android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content">
            <com.duoyue.app.ui.widget.CustomImageView style="@style/title_img_btn_style" android:id="@+id/toolbar_back"
                                                      android:src="@mipmap/icon_back"
                                                      tools:ignore="ContentDescription"/>
            <TextView android:id="@+id/toolbar_left_tv" style="@style/title_text_left_style"/>
        </com.duoyue.lib.base.widget.XRelativeLayout>
        <TextView android:id="@+id/toolbar_right_tv" style="@style/title_text_btn_style"
                  android:layout_alignParentRight="true"/>
        <TextView android:id="@+id/toolbar_title" style="@style/title_text_style" android:layout_width="match_parent"
                  app:x_layout_margin="100,#,100,#" android:gravity="center"/>
        <com.duoyue.lib.base.widget.XRelativeLayout
                android:id="@+id/layout_toolbar_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical">
            <!-- 右边操作按钮(图片) -->
            <com.duoyue.app.ui.widget.CustomImageView android:id="@+id/toolbar_right_img"
                                                      style="@style/title_text_btn_style" tools:src="@mipmap/question"
                                                      android:layout_marginRight="1dp"/>
            <!-- 右边操作按钮(Button文字) -->
            <Button android:id="@+id/toolbar_right_btn" android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:gravity="center_vertical" android:minHeight="0dp"
                    android:minWidth="0dp" app:x_layout_margin="34,#,34,#" android:background="@null"
                    android:textColor="@color/text_color_898989" app:x_text_size="30"/>
        </com.duoyue.lib.base.widget.XRelativeLayout>

        <!-- 右边操作按钮(图片) 第二个按钮 -->
        <com.duoyue.app.ui.widget.CustomImageView android:id="@+id/toolbar_right_img_2"
                                                  style="@style/title_text_btn_style"
                                                  tools:src="@mipmap/question"
                                                  android:layout_toLeftOf="@+id/layout_toolbar_right"
                                                  android:layout_marginRight="-10dp"/>

        <!--右边 左图右文字-->
        <com.duoyue.lib.base.widget.XLinearLayout
                android:id="@+id/toolbar_right_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:clickable="true"
                android:gravity="center_vertical">
            <!-- 右边图片 -->
            <com.duoyue.app.ui.widget.CustomImageView
                    android:id="@+id/toolbar_right_layout_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <!-- 右边文字 -->
            <TextView android:id="@+id/toolbar_right_layout_text"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical"
                      app:x_layout_margin="14,#,34,#"
                      android:textColor="@color/title_btn_text"
                      app:x_text_size="30"/>
        </com.duoyue.lib.base.widget.XLinearLayout>

        <!-- <View android:id="@+id/toolbar_bottom_line" style="@style/line_horizontal" android:layout_below="@+id/left_container" />-->
    </com.duoyue.lib.base.widget.XRelativeLayout>
</com.duoyue.lib.base.widget.XRelativeLayout>